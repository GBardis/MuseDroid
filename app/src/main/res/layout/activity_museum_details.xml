<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.musedroid.musedroid.MuseumDetails">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/museumImage1"
        android:layout_width="386dp"
        android:layout_height="246dp"
        android:layout_marginTop="-11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-10dp" />


    <android.widget.TextView
        android:id="@+id/museum_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1"
        tools:layout_editor_absoluteX="-78dp"



        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/browseImage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_browse"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goToMaps1"
        android:layout_marginTop="8dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/qrScannerImage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_qr_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/goToMaps1"
        android:layout_marginTop="8dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/goToMaps1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/ic_go_to_maps"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/qrScannerImage1"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/browseImage1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
        app:layout_constraintVertical_bias="1.0" />


    <android.widget.RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/museumImage1" />


</android.support.constraint.ConstraintLayout>
